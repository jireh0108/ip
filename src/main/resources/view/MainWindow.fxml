<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="400.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="nova.ui.MainWindow"
            stylesheets="@style.css">

    <children>
        <ScrollPane fx:id="scrollPane"
                    fitToWidth="true"
                    hbarPolicy="NEVER"
                    vbarPolicy="AS_NEEDED"
                    prefHeight="557.0" prefWidth="400.0"
                    AnchorPane.topAnchor="0.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.bottomAnchor="50.0">
            <content>
                <VBox fx:id="dialogContainer"
                      spacing="10"
                      prefWidth="388.0"
                      styleClass="chat-container"/>
            </content>
        </ScrollPane>

        <AnchorPane prefHeight="50.0"
                    layoutY="550.0"
                    styleClass="input-bar"
                    AnchorPane.bottomAnchor="0.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0">
            <children>
                <TextField fx:id="userInput"
                           onAction="#handleUserInput"
                           prefHeight="41.0" prefWidth="324.0"
                           layoutX="5.0" layoutY="5.0"
                           promptText="Type a message..."
                           styleClass="input-field"
                           AnchorPane.leftAnchor="10.0"
                           AnchorPane.rightAnchor="90.0"
                           AnchorPane.topAnchor="5.0"
                           AnchorPane.bottomAnchor="5.0"/>
                <Button fx:id="sendButton"
                        text="Send"
                        onAction="#handleUserInput"
                        layoutX="330.0" layoutY="5.0"
                        prefHeight="41.0" prefWidth="70.0"
                        styleClass="send-button"
                        AnchorPane.rightAnchor="10.0"
                        AnchorPane.topAnchor="5.0"
                        AnchorPane.bottomAnchor="5.0"/>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
